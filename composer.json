{
    "name": "oliverearl/nomiai-php",
    "description": "PHP SDK for interacting with the Nomi.ai API",
    "keywords": [
        "nomi ai",
        "nomi",
        "artificial intelligence"
    ],
    "homepage": "https://github.com/oliverearl/nomiai-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Earl",
            "email": "oliver@oliverearl.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "guzzlehttp/guzzle": "^7.9",
        "laravel/pint": "^1.0",
        "pestphp/pest": "^2.20",
        "spatie/ray": "^1.28",
        "tomb1n0/guzzle-mock-handler": "^1.7",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "Nomiai\\PhpSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nomiai\\PhpSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
